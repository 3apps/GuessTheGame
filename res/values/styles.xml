<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="ShowcaseView">
        <item name="titleTextColor">#e2ef65</item>
        <item name="detailTextColor">#FFFFFF</item>
        <item name="backgroundColor">#90000000</item>
    </style>
    
    <style name="ShowcaseTitleText">
        <item name="android:paddingTop">20dp</item>
        
    </style>
    
    <style name="ShowcaseButton">
        <item name="android:paddingTop">20dip</item>
        <item name="android:paddingBottom">20dip</item>
        <item name="android:paddingLeft">40dip</item>
        <item name="android:paddingRight">40dip</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_height">10dip</item>
       
    </style>

</resources>